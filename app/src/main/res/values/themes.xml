<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sneaky_Sesame</item>
        <item name="colorPrimaryVariant">@color/heavy_Metal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_Olive</item>
        <item name="colorSecondaryVariant">@color/black_Olive</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/light_rampart</item>
        <item name="floatingActionButtonLargePrimaryStyle">@color/sneaky_Sesame</item>
        <item name="toolbarId">@color/sneaky_Sesame</item>
        <item name="backgroundColor">@color/light_cave_Man</item>
        <item name="editTextBackground">@color/white</item>
        <item name="color">@color/light_black_Olive</item>
    </style>

    <style name="Theme.ToDoApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ToDoApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ToDoApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>


