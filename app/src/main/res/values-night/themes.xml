<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sneaky_Sesame</item>
        <item name="background">@color/night_background</item>
        <item name="colorPrimaryVariant">@color/heavy_Metal</item>
        <item name="colorOnPrimary">@color/lightBlack</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_Olive</item>
        <item name="colorSecondaryVariant">@color/black_Olive</item>
        <item name="colorOnSecondary">@color/brown_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black_Olive</item>
        <!-- Customize your theme here. -->
        <item name="floatingActionButtonLargePrimaryStyle">@color/night_sneaky_Sesame</item>
        <item name="toolbarId">@color/night2_sneaky_Sesame</item>
        <item name="backgroundColor">@color/cave_Man</item>
        <item name="editTextBackground">@color/night_white</item>
    </style>

    <style name="CustomDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:background">@color/light_night_background</item>
        <item name="android:textColorPrimary">@color/black_Olive</item>
        <item name="android:headerBackground">@color/green_Empress</item>
    </style>

    <style name="InfoFragment" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="backgroundColor">@color/cave_Man</item>
    </style>
</resources>